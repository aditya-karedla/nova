{
  "name": "@nova/tokens",
  "version": "0.1.0-alpha.1",
  "description": "Design tokens for Nova UI component library",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./colors": {
      "import": "./dist/colors.mjs",
      "require": "./dist/colors.js",
      "types": "./dist/colors.d.ts"
    }
  },
  "sideEffects": false,
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adityakaredla/nova"
  },
  "keywords": [
    "design-tokens",
    "colors",
    "design-system",
    "typescript",
    "tailwind"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
